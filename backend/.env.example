# LangGraph 0.6 Agent Chatbot Configuration
# Copy this file to .env and fill in your values

# ======================
# LLM Configuration
# ======================
# LLM provider: "openai" or "azure"
# Default: openai (real LLM, not mock)
LLM_PROVIDER=openai

# OpenAI API configuration
# Required for OpenAI provider
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=

# Azure OpenAI configuration (optional)
# Required only if using Azure provider
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=

# ======================
# Mock Settings
# ======================
# Use mock LLM instead of real API calls
# Set to true only for testing without API keys
# Default: false (use real LLM)
USE_MOCK_LLM=false

# Use mock data for tools (since DB is not ready)
# Default: true (tools return mock data)
USE_MOCK_TOOLS=true

# ======================
# Test Configuration
# ======================
# Enable test mode
TEST_MODE=true

# Enable debug logging
DEBUG_MODE=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ======================
# Database Configuration
# ======================
# Note: Currently not in use, tools use mock data
DB_HOST=localhost
DB_PORT=5432
DB_NAME=real_estate
DB_USER=
DB_PASSWORD=

# ======================
# System Settings
# ======================
# Maximum recursion depth for graph execution
MAX_RECURSION=25

# Agent timeout in seconds
AGENT_TIMEOUT=30

# LLM call timeout in seconds
LLM_TIMEOUT=20

# ======================
# Notes
# ======================
# 1. LLM calls use real OpenAI API by default
# 2. Tools return mock data since DB is not ready
# 3. To use without API key, set USE_MOCK_LLM=true
# 4. Mock and real implementations are clearly separated